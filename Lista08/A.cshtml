/*
 Crie um programa que exiba todos os números pares entre 0 e 100.
 */
using System;

namespace A
{
	class Program
	{
		public static void Main(string[] args)
		{
			for(int i = 0; i <= 100; i++) {
				if(i % 2 == 0) {
					Console.Write(i);
					Console.Write(",");
				}
			}
			
			
			Console.Write("Press any key to continue . . . ");
			Console.ReadKey(true);
		}
	}
}